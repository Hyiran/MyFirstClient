<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/toutiaozt_imgsrc"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/toutiaozt_title"
            android:layout_toRightOf="@+id/toutiaozt_imgsrc"
            style="@style/xinwen_item_title"/>
        <TextView
           android:id="@+id/toutiaozt_digest"
            style="@style/xinwen_item_digest"
            android:layout_below="@+id/toutiaozt_title"
            android:layout_toRightOf="@+id/toutiaozt_imgsrc"/>

        <LinearLayout
            android:id="@+id/toutiao_zhuanti_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/toutiaozt_imgsrc">
            <TextView
                android:text="专题"
                android:textColor="#ffff0000"
                android:padding="4dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/toutiao_stroke"/>
        </LinearLayout>
        <ImageView
            android:layout_below="@+id/toutiaozt_imgsrc"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/xinwen_toutiao_item"/>
    </RelativeLayout>
</RelativeLayout>
