<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/toutiaop_imgsrc"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/toutiaop_title"
            android:layout_toRightOf="@+id/toutiaop_imgsrc"
            android:textColor="@color/black"
            style="@style/xinwen_item_title"/>
        <TextView
           android:id="@+id/toutiaop_digest"
            style="@style/xinwen_item_digest"
            android:layout_below="@+id/toutiaop_title"
            android:layout_toRightOf="@+id/toutiaop_imgsrc"/>

        <LinearLayout
            android:id="@+id/toutiao_putong_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:layout_alignBottom="@+id/toutiaop_imgsrc">
            <TextView
                android:id="@+id/toutiaop_replaycount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/toutiao_gentieyangshi"
                android:text="跟帖"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_below="@+id/toutiaop_imgsrc"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/xinwen_toutiao_item"/>
    </RelativeLayout>
</RelativeLayout>
